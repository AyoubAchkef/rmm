# ============================================
# Server Configuration
# ============================================
PORT=3003
NODE_ENV=development

# ============================================
# Playwright Configuration
# ============================================
# URL de base pour les tests (ex: CRM Ariane)
BASE_URL=https://your-crm-url.com

# Navigateur par défaut (chromium, firefox, webkit)
DEFAULT_BROWSER=chromium

# Mode headless (true = sans interface, false = avec interface)
HEADLESS=true

# Timeout par défaut (en millisecondes)
DEFAULT_TIMEOUT=30000

# ============================================
# Test Results Storage
# ============================================
# Dossier pour stocker les résultats des tests
RESULTS_DIR=./test-results

# Dossier pour stocker les screenshots
SCREENSHOTS_DIR=./screenshots

# Dossier pour stocker les vidéos
VIDEOS_DIR=./videos

# ============================================
# Logging
# ============================================
LOG_LEVEL=info

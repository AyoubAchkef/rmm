# ============================================
# Azure AD App Registration
# ============================================
# Obtenez ces valeurs auprès de votre administrateur Azure AD
# Guide: Voir AI_INTEGRATION.md section SharePoint

# Tenant ID (Directory ID)
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000

# Application (Client) ID
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000

# Client Secret (Value)
AZURE_CLIENT_SECRET=votre-client-secret-ici

# ============================================
# SharePoint Configuration
# ============================================
# URL du site SharePoint à connecter
SHAREPOINT_SITE_URL=https://reachbcp1.sharepoint.com/sites/Dynamics365ProjectTeam

# Bibliothèque de documents par défaut
SHAREPOINT_DEFAULT_LIBRARY=Documents

# ============================================
# Server Configuration
# ============================================
PORT=3002
NODE_ENV=development

# Mode Mock (true = utilise des données fictives, false = utilise Microsoft Graph API)
USE_MOCK_DATA=true

# Logging
LOG_LEVEL=info
